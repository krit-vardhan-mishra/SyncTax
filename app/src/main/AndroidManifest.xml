<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- Optional: Only requested when user enables album art scanning in Settings -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".MusicApplication"
        android:extractNativeLibs="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_icon_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.synctax"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.synctax">

            <!-- Intent filter for opening audio files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:mimeType="audio/*" />
                <data android:mimeType="application/ogg" />
                <data android:mimeType="application/x-ogg" />
                <data android:mimeType="application/itunes" />
            </intent-filter>
        </activity>

        <!-- Activity Aliases for App Icon Switching -->
        <!-- Default Icon (app_icon_main) -->
        <activity-alias
            android:name=".MainActivityDefault"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/app_icon_main"
            android:roundIcon="@mipmap/app_icon_main_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Vintage Icon (app_icon_2) -->
        <activity-alias
            android:name=".MainActivityVintage"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/app_icon_2"
            android:roundIcon="@mipmap/app_icon_2_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Aqua Icon (app_icon_3) -->
        <activity-alias
            android:name=".MainActivityAqua"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/app_icon_3"
            android:roundIcon="@mipmap/app_icon_3_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Premium Icon (app_icon_4) -->
        <activity-alias
            android:name=".MainActivityPremium"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/app_icon_4"
            android:roundIcon="@mipmap/app_icon_4_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Turbo Icon (app_icon_5) -->
        <activity-alias
            android:name=".MainActivityTurbo"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/app_icon_5"
            android:roundIcon="@mipmap/app_icon_5_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Neon Icon (app_icon_6) -->
        <activity-alias
            android:name=".MainActivityNeon"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/app_icon_6"
            android:roundIcon="@mipmap/app_icon_6_round"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <service
            android:name=".core.service.MusicService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <receiver
            android:name=".presentation.ui.widget.MusicWidgetProvider"
            android:exported="true"
            android:label="Music Player">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.just_for_fun.synctax.ACTION_PLAY_PAUSE" />
                <action android:name="com.just_for_fun.synctax.ACTION_NEXT" />
                <action android:name="com.just_for_fun.synctax.ACTION_PREVIOUS" />
                <action android:name="com.just_for_fun.synctax.ACTION_SHUFFLE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_music_metadata" />
        </receiver>

        <receiver
            android:name=".presentation.ui.widget.MusicInfoWidgetProvider"
            android:exported="true"
            android:label="Music Info">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_metadata" />
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>