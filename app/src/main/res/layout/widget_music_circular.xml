<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Main Content Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- Circular Background -->
        <FrameLayout
            android:id="@+id/widget_background_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <!-- Background Circle - simple colored view -->
            <View
                android:id="@+id/widget_background_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4D000000" />

            <!-- Progress Circle -->
            <ProgressBar
                android:id="@+id/widget_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/widget_circular_progress" />
        </FrameLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Duration Text -->
            <TextView
                android:id="@+id/widget_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <!-- Song Title -->
            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="No song playing"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Artist -->
            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <!-- Controls Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Previous Button -->
                <ImageButton
                    android:id="@+id/widget_previous"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Previous"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_media_previous" />

                <!-- Play/Pause Button -->
                <ImageButton
                    android:id="@+id/widget_play_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Play/Pause"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_media_play" />

                <!-- Next Button -->
                <ImageButton
                    android:id="@+id/widget_next"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Next"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_media_next" />

                <!-- Shuffle Button -->
                <ImageButton
                    android:id="@+id/widget_shuffle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Shuffle"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_sort_by_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>