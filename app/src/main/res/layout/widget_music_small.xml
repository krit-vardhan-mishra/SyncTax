<?xml version="1.0" encoding="utf-8"?>
<!-- SMALL Widget Layout: Compact single-row design -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_glassmorphic_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Album Art -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:contentDescription="Album Art"
            android:background="@drawable/widget_circle_background"
            android:src="@mipmap/ic_launcher" />

        <!-- Song Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No song"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to open"
                android:textColor="#B3FFFFFF"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Play/Pause Button Only -->
        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Play/Pause"
            android:scaleType="fitCenter"
            android:tint="#FFFFFF"
            android:src="@android:drawable/ic_media_play" />
    </LinearLayout>
</FrameLayout>
